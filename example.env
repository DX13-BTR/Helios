# Helios â€” example.env
# Copy to ".env" and set real values locally. Do NOT commit the real .env.
# Notes:
# - For Google service accounts, prefer GOOGLE_APPLICATION_CREDENTIALS pointing to a secure JSON file path.
# - Avoid putting live secrets in FRONTEND-exposed variables (e.g., VITE_*). Route via your backend where possible.

# ============ Efkaristo / Business Account (Starling) ============
EFK_STARLING_TOKEN=your-efk-starling-api-token
EFK_ACCOUNT_UID=your-efk-business-account-uuid
EFK_CATEGORY_UID=your-efk-business-category-uuid

# ============ Personal Account (Starling) ============
PERS_STARLING_TOKEN=your-personal-starling-api-token
PERS_ACCOUNT_UID=your-personal-account-uuid
PERS_CATEGORY_UID=your-personal-category-uuid

# ============ Public URLs / Tunnels ============
NGROK_URL=https://your-tunnel-host.example.com

# ============ LLMs ============
LLAMA_ENDPOINT=http://localhost:11434/api/generate
OPENAI_API_KEY=your-openai-api-key

# ============ ClickUp Webhook ============
CLICKUP_WEBHOOK_URL=https://your-app.example.com/webhook
CLICKUP_WEBHOOK_SECRET=change-me-strong-random

# ============ ClickUp (Server-side) ============
CLICKUP_API_KEY=your-clickup-api-key
CLICKUP_EMAIL_LIST_ID=your-clickup-email-list-id
CLICKUP_SPACE_ID_CLIENTS=your-clickup-space-id-clients
CLICKUP_SPACE_ID_MARKETING=your-clickup-space-id-marketing
CLICKUP_PERSONAL_SPACE_ID=your-clickup-space-id-personal
CLICKUP_SPACE_ID_EFKARISTO=your-clickup-space-id-efkaristo
CLICKUP_USER_ID=your-clickup-user-id
CLICKUP_ME_UID=your-clickup-me-uid
CLICKUP_TEAM_ID=your-clickup-team-id

# ============ ClickUp (Frontend, will be PUBLIC if bundled) ============
# Prefer proxying via backend; only expose if absolutely necessary.
VITE_CLICKUP_API_KEY=placeholder-only-do-not-use-in-production
VITE_CLICKUP_LIST_ID=placeholder-list-id
VITE_CLICKUP_SPACE_ID_CLIENTS=placeholder-space-id
VITE_CLICKUP_SPACE_ID_MARKETING=placeholder-space-id
VITE_CLICKUP_SPACE_ID_PERSONAL=placeholder-space-id
VITE_CLICKUP_SPACE_ID_EFKARISTO=placeholder-space-id
VITE_CLICKUP_USER_ID=placeholder-user-id
VITE_CLICKUP_TEAM_ID=placeholder-team-id

# ============ Toggl ============
TOGGL_API_KEY=your-toggl-api-key
TOGGL_WORKSPACE_ID=your-toggl-workspace-id

# ============ Database / Paths ============
DB_PATH=C:/Helios/core_py/db/helios.db

# ============ TTS / Voice (replace if using Google TTS instead) ============
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# ============ Gmail / Google OAuth ============
GMAIL_USER=you@example.com
GMAIL_TOKEN_PATH=C:/Helios/core_py/gmail_token.json            # local only; not in repo
GMAIL_CREDENTIALS_PATH=C:/Helios/core_py/dcredentials.json     # local only; not in repo
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.modify

# ============ Agent Control ============
AGENT_ENABLED=true
AGENT_LOGGING=true
AGENT_IDENTITY_NAME=Helios

# ============ Memory + Logging Paths ============
MEMORY_LOG_PATH=helios/logs/memory.json
ADVICE_OUTPUT_PATH=outputs/AdviceOutput.csv
BUILDER_LOG_PATH=helios/logs/builder.log.json

# ============ Google Drive / Calendar Support ============
DRIVE_ENABLED=true
DRIVE_TOKEN_PATH=helios/core_pytoken.json           # local only; not in repo
DRIVE_CREDENTIALS_PATH=helios/dcredentials.json     # local only; not in repo
DRIVE_SCOPES=https://www.googleapis.com/auth/drive.readonly

CALENDAR_TOKEN_PATH=C:/Helios/core_py/helios_token_rw.json     # local only; not in repo
HELIOS_GCAL_TOKEN_FILE=C:/Helios/core_py/helios_token_rw.json  # local only; not in repo
CALENDAR_CREDENTIALS_PATH=C:/Helios/core_py/dcredentials.json  # local only; not in repo
CALENDAR_SCOPES=https://www.googleapis.com/auth/calendar
FIXED_CALENDAR_ID=your-fixed-calendar-id
FLEXIBLE_CALENDAR_ID=your-flexible-calendar-id
HELIOS_TZ=Europe/London
HELIOS_ACCEPT_ALL_EVENTS=1

# ============ Agent Security + Port ============
HELIOSTOKEN=change-me-strong-random
AGENT_SERVER_PORT=80

# ============ Todoist OAuth ============
TODOIST_REDIRECT_URI=https://your-app.example.com/integrations/todoist/callback
TODOIST_CLIENT_ID=your-todoist-client-id
TODOIST_CLIENT_SECRET=your-todoist-client-secret

# ============ Reclaim ============
RECLAIM_API_KEY=your-reclaim-api-key

# ============ Google Service Account ============
# Prefer file-based credentials via GOOGLE_APPLICATION_CREDENTIALS (path), not inline JSON.
GOOGLE_APPLICATION_CREDENTIALS=C:/helios/core_py/gcp-tts-key.json
# If you must inline (NOT RECOMMENDED), leave blank here and set at runtime only:
GOOGLE_SA_JSON=

# ============ Triage / Advice ============
TRIAGE_SHEET_ID=your-google-sheet-id
TRIAGE_FULL_RESYNC=0
TRIAGE_LOOKBACK_DAYS=90
TRIAGE_VERBOSE=1
TRIAGE_THREAD_MODE=per_thread

ADVICE_MODEL=llama3:pinned-adv
OLLAMA_NUM_CTX=8192

# ============ Allow/Unknown sender services ============
ALLOWLIST_URL=http://127.0.0.1:3333/api/allowlist
UNKNOWN_URL=http://127.0.0.1:3333/api/unknown-senders

# ============ Admin / Misc ============
ADMIN_KEY=change-me-strong-random

# End of example.env
