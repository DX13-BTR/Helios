{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "allowJs": true,           // let TS understand .js files
    "checkJs": false,          // don't type-check .js files
    "skipLibCheck": true,
    "noEmit": true,            // <-- prevents the “overwrite input file” errors
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
